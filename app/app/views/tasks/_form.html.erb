<%= form_with model: task, local: true do |f| %>
    <div><%= f.label :title %><br><%= f.text_field :title %></div>
    <div><%= f.label :description %><br><%= f.text_area :description %></div>
    <div>
        <%= f.label :category %>
        <%= f.select :category, Task::CATEGORIES %>
    </div>
    <div><%= f.label :frequency %><br><%= f.text_field :frequency %></div>
    <div><%= f.label :message %><br><%= f.text_area :message %></div>
    <div><%= f.label :start_date %><br><%= f.datetime_select :start_date %></div>
    <div><%= f.label :end_date %><br><%= f.datetime_select :end_date %></div>
    <div>
        <%= f.label :color %>
        <%= f.select :color, Task::COLORS %>
    </div>
    <div><%= f.submit %></div>
  <% end %>
  