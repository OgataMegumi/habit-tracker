<div class="page-layout">
  <div class="left-column">
    <div class="date-header">
      <div class="today-date">
        <%= Date.current.strftime("%-m.%-d(%a)") %>
      </div>
      <div class="random-message">
        <%= @random_message %>
      </div>
    </div>
    <div class="search-form">
      <%= form_with url: tasks_path, method: :get, local: true do |form| %>
        <%= form.text_field :q, placeholder: "„Çø„Çπ„ÇØ„ÅÆ„Çø„Ç§„Éà„É´", value: params[:q], class: "task-search-input" %>
        <%= form.submit "üîç", class: "task-search-button" %>
        <%= link_to "ÂÖ®„Å¶„ÅÆ„Çø„Çπ„ÇØ", tasks_path, class: "all-tasks-button" %>
      <% end %>
    </div>
    <div class="scrollable-area">
      <div class="task-list-wrapper">
        <div>
          <h4>TO DO</h4>
          <div class="task-list">
            <% @in_progress_tasks.each do |task| %>
              <div class="task-card" data-task-id="<%= task.id %>">
                <div class="dropdown">
                  <button class="dropdown-toggle" onclick="event.stopPropagation()">‚ãØ</button>
                  <div class="dropdown-menu" hidden>
                    <%= link_to 'Á∑®ÈõÜ', edit_task_path(task), class: 'dropdown-item' %>
                    <%= link_to 'ÂâäÈô§', task_path(task), method: :delete, data: { confirm: 'Êú¨ÂΩì„Å´ÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü' }, class: 'dropdown-item' %>
                  </div>
                </div>
                <div class="progress-circle">
                  <div class="fill" style="background: conic-gradient(<%= task.color_code %> <%= task.completion_rate %>%, #ffffff <%= task.completion_rate %>%, #ffffff 100%);"></div>
                  <% image_file = task_category_image_map[task.category] || "default.png" %>
                  <img class="icon" src="<%= asset_path(image_file) %>" alt="Task">
                </div>
                <div class="task-title" <%= "cmopleted-today" if task.task_logs.exists?(executed_on: @today) %>">
                  <%= task.title %>
                </div>
              </div>
            <% end %>
            <% if @in_progress_tasks.any? && params[:q].blank? %>
              <div class="task-card new-task-card" id="openNewTaskModal">
                <div class="plus-icon">Ôºã</div>
                <div class="new-task-label">TO DO</div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="completed_tasks_list">
          <h4>ÈÅîÊàê„Åó„Åü„Çø„Çπ„ÇØ</h4>
          <div class="task-list">
            <% @completed_tasks.each do |task| %>
              <div class="task-card completed">
                <div class="progress-circle">
                  <div class="fill" style="background: conic-gradient(<%= task.color_code %> <%= task.completion_rate %>%, #ffffff <%= task.completion_rate %>%, #ffffff 100%);"></div>
                  <% image_file = task_category_image_map[task.category] || "default.png" %>
                  <img class="icon" src="<%= asset_path(image_file) %>" alt="Task">
                </div>
                <div class="task-title">
                  <%= task.title %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="right-column">
    <div class="calendar-wrapper">
      <h4>CALENDAR</h4>
      <div class="calender-container">
        <table class="calendar">
          <thead>
            <tr>
              <th>Êó•</th>
              <th>Êúà</th>
              <th>ÁÅ´</th>
              <th>Ê∞¥</th>
              <th>Êú®</th>
              <th>Èáë</th>
              <th>Âúü</th>
            </tr>
          </thead>
          <tbody>
          <% @current_month_dates.each_slice(7) do |week| %>
            <tr>
              <% week.each do |date| %>
                <% tasks_on_date = @tasks.select { |task| task.task_logs.exists?(executed_on: date) } %>
                <% titles = tasks_on_date.map { |t| t.title.presence || "(no title)" }.join(', ') %>
                <td
                  class="calender-cell <%= 'checked' if tasks_on_date.any? %>"
                  data-task-titles="<%= tasks_on_date.map { |t| t.title.presence || '(no title)' }.join(',') %>"
                >
                  <div class="task-background">
                    <% tasks_on_date.each_with_index do |task, index| %>
                      <span class="task-span"
                        style="background-color: <%= task.color_code %>; width: <%= 100 / tasks_on_date.size %>%;"
                      ></span>
                    <% end %>
                  </div>
                  <div class="date-number">
                    <strong><%= date.day %></strong>
                  </div>
                </td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="graph-wrapper">
      <h4>GRAPH</h4>
      <div class="graph-container">
        <%= column_chart(
              @progress_data.map { |date, progress| [date.strftime("%m/%d"), progress] },
              height: "200px",
              stacked: true
            )
        %>
      </div>
    </div>
  </div>
</div>

<div id="taskModal" class="task-log-modal" style="display: none;">
  <div class="task-log-modal-content">
    <ul id="modalTaskList"></ul>
  </div>
</div>

<div id="newTaskModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button" id="newTaskModalClose">&times;</span>
    <h3>„Çø„Çπ„ÇØ„ÇíËøΩÂä†</h3>
    <div id="newTaskModalBody">
      <%= render 'form', task: Task.new %>
    </div>
  </div>
</div>
