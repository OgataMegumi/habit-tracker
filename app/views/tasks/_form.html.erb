<%= form_with model: task, local: true do |f| %>
    <div><%= f.label :title, "目標" %><br><%= f.text_field :title %></div>
    <div><%= f.label :description,"メモ"  %><br><%= f.text_area :description %></div>
    <div>
        <%= f.label :category, "カテゴリー" %>
        <%= f.select :category, Task::CATEGORIES %>
    </div>
    <div>
        <%= f.label :frequency_unit, "頻度" %>
        <%= f.select :frequency_number, Task::FREQUENCY_RANGE %>
        <%= f.select :frequency_unit, Task::FREQUENCY_UNITS_LIST %> に1回
    </div>
    <div><%= f.label :message, "自分への応援メッセージ" %><br><%= f.text_area :message %></div>
    <div><%= f.label :start_date, "開始日" %><br><%= f.datetime_select :start_date %></div>
    <div><%= f.label :end_date, "完了日" %><br><%= f.datetime_select :end_date %></div>
    <div>
        <%= f.label :color, "テーマカラー" %>
        <%= f.select :color, Task::COLORS %>
    </div>
    <div><%= f.submit %></div>
  <% end %>
  