<h2 class="login-title">LOG IN</h2>

<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field password-wrapper">
      <%= f.label :password, "パスワード" %>
      <div class="password-input-container">
        <%= f.password_field :password, autocomplete: "current-password", id: "user_current_password" %>
        <span class="toggle-password-visibility" data-target="user_current_password">
          <i class="fa-solid fa-eye-slash" style="color: #afafaf;"></i>
        </span>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "次回から自動的にログインする" %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="error-message">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>

<div class="devise-links">
  <%= render "devise/shared/links" %>
</div>
